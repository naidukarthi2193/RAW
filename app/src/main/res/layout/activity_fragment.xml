<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/image_card"
        android:src="@drawable/hotel_image"
        android:alpha="0.2"
        android:layout_width="match_parent"
        android:layout_margin="16dp"
        android:scaleType="fitXY"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/location_card"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/location_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/image_card"
        app:layout_constraintBottom_toTopOf="@id/details_card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/date_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12 January 2018"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="5dp"
                />

            <ImageView
                android:id="@+id/orange"
                android:src="@drawable/orange_circle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@id/date_head"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/line"
                app:layout_constraintHorizontal_bias="1"
                />


            <TextView
                android:id="@+id/line"
                app:layout_constraintTop_toBottomOf="@id/date_head"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-------------------------------------------------------------"
                />
            <ImageView
                android:id="@+id/green"
                android:src="@drawable/green_circle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/date_head"
                app:layout_constraintLeft_toRightOf="@+id/line"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0"
                />
            <TextView
                android:id="@+id/orange_Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:00pm"
                android:layout_margin="5dp"
                android:textColor="@color/orange"
                app:layout_constraintTop_toBottomOf="@+id/orange"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.10"
                />
            <TextView
                android:id="@+id/green_time"
                android:text="6:00pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/green"
                app:layout_constraintHorizontal_bias="0.9"
                android:textColor="@color/green"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/start_loc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taj Hauz Khas"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@+id/orange_Time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/end_loc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deer Park"
                android:textStyle="bold"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@+id/green_time"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.93"
                android:layout_margin="5dp"
                />
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/start_add"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Collection point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/start_loc_name"
                app:layout_constraintHorizontal_bias="0.07"
                />

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/end_add"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="Collection point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/start_loc_name"
                app:layout_constraintHorizontal_bias="0.94"
                />
            <android.support.design.button.MaterialButton
                android:id="@+id/start_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Direction"
                android:textAllCaps="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.07"
                app:layout_constraintTop_toBottomOf="@+id/start_add"
                android:layout_margin="5dp"
                />

            <android.support.design.button.MaterialButton
                android:id="@+id/end_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get Direction"
                android:textAllCaps="false"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.97"
                app:layout_constraintTop_toBottomOf="@+id/start_add"
                android:layout_margin="5dp"
                />

        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/details_card"
        app:layout_constraintTop_toBottomOf="@id/location_card"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:layout_margin="30dp"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/heading_info"
                android:text="Details"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/name"
                android:text="Hotel Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/heading_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/type"
                android:text="Food Type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.15"/>

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/quantity"
                android:text="Quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/type"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.15"/>

            <TextView
                android:layout_margin="5dp"
                android:id="@+id/fresh"
                android:text="Expected Freshness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/quantity"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.15"/>

            <TextView
                android:id="@+id/name_setter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/heading_info"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/name"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/type_setter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/name_setter"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/name"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/quantity_setter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/type_setter"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/name"
                android:layout_margin="5dp"
                />
            <TextView
                android:id="@+id/fresh_setter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/quantity_setter"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/name"
                android:layout_margin="5dp"
                />


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/collectors"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details_card"
        >
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/volunters"
                android:text="Voluters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="16dp"
                />
            <LinearLayout
                app:layout_constraintTop_toBottomOf="@id/volunters"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/ic_launcher_round"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:visibility="gone"
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </android.support.constraint.ConstraintLayout>





    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>